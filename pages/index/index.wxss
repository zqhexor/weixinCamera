/**index.wxss**/
.page-title {
  font-size: 40rpx;
}

/* 主体区域 */
.main-area {
  margin-top: 20rpx;
  margin-right: 20rpx;
}

/* 表单的每一行 */
.form-item {
  height: 60rpx;
  line-height: 60rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
}

/* 图片表单高度 */
.pic-form{
  height: 100rpx;
}
/* 图片区域 */
.pic-area{
  width: 100rpx;
  height: 100rpx;
  padding-left: 55rpx;
}

/* 表单每一行的文字描述 */
.form-item-name {
  font-size: 24rpx;
  align-items: center;
}

/* 表单右边的元素 */
.form-item-right {
  margin-left: 20rpx;
}

/* 表单左边的元素 */
.form-item-left {
  margin-right: 40rpx;
}

/* 单选按钮组 */
.radio-group {
  align-items: center;
}

/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
radio .wx-radio-input {
  transform: scale(0.7);
  height: 30rpx;
  width: 30rpx;
  margin-top: -4rpx;
  border-radius: 50%;
  border: 1rpx solid #999;
  background: transparent;
}

/* 后边的radio */
.radio-right {
  margin-left: 20rpx;
}

/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked {
  border: 1rpx solid #F6C443;
  background: #F6C443;
}

/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%;
  /* 圆角 */
  width: 30rpx;
  /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 30rpx;
  /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 30rpx;
  text-align: center;
  font-size: 30rpx;
  /* 对勾大小 30rpx */
  color: #fff;
  /* 对勾颜色 白色 */
  background: #F6C443;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

/* 单选按钮文字 */
.radio-text {
  font-size: 28rpx;
}

/* 文本输入框样式 */
.form-item-input {
  border: 1rpx solid #CCCCCC;
  height: 60rpx;
  border-radius: 8rpx;
  width: 475rpx;
  padding-left: 20rpx;
  font-size: 24rpx;
  margin-left: 40rpx;
}
/* 日期输入框样式 */
.form-item-input.form-item-date-input {
  width: 475rpx;
}

/* 输入框默认提示字符样式 */
.form-item-input-placeholder {
  font-size: 24rpx;
}

/* 时间输入框的样式 */
.form-item-time-pick {
  border: 1rpx solid #CCCCCC;
  height: 60rpx;
  border-radius: 8rpx;
  width: 65%;
  padding-left: 20rpx;
  font-size: 24rpx;
  margin-left: 40rpx;
}

.time-pick {
  width: 186rpx;
}

/* 文本输入域 */
.form-item-textarea {
  border: 1rpx solid #CCCCCC;
  height: 200rpx;
  border-radius: 8rpx;
  width: 475rpx;
  padding-left: 20rpx;
  font-size: 24rpx;
  margin-left: 40rpx;
  padding-top: 10rpx;
  line-height: 40rpx;
}

/* 输入框默认提示字符样式 */
.form-item-textarea-placeholder {
  font-size: 24rpx;
  padding-top: 10rpx;
}

/* 文本输入框后面的内容 */
.form-after-textarea {
  margin-top: 160rpx;
}

/* 上传按钮 */
.form-button-upload {
  min-height: 60rpx !important;
  height: 60rpx !important;
  width: 186rpx !important;
  padding-left: 40rpx;
  font-size: 24rpx;
  margin-right: 0 !important;
  margin-left: 40rpx !important;
}

/* 身份证号输入框样式 */
.form-item-input-id {
  border: 1rpx solid #CCCCCC;
  height: 60rpx;
  border-radius: 8rpx;
  width: 50%;
  padding-left: 20rpx;
  font-size: 24rpx;
  margin-left: 40rpx;
}

/* 识别按钮 */
.form-button-ident {
  min-height: 60rpx !important;
  height: 60rpx !important;
  width: 120rpx !important;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 24rpx;
  margin-right: 0 !important;
  margin-left: 20rpx !important;
  background-color: #F6C443 !important;
  color: #000 !important;

}

/* 不可操作输入框状态样式 */
.form-item-input-disable {
  background-color: #eeeeee;
}

/* 提交按钮 */
.form-button-submit {
  width: 90% !important;
  border: 0;
  margin-top: 80rpx;
  margin-bottom: 40rpx;
}
