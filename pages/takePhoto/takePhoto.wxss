page{
  height: 100%;
}
.page-take-photo{
  width: 100%;
  height: 100%;
}
.photo{
  width: 100%;
  height: 100%;
  position: absolute;
}
.photo-area{
  width: 100%;
  height: 100%;
  position: absolute;
}

.option-area{
  width: 100%;
  height: 20%;
  background-color: rgba(0,0,0,0.3);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  position: absolute;
  bottom: 0;
  left:0;
}

.avatar{
  width: 750rpx;
  height: 682rpx;
  position: absolute;
  bottom: 30%;
  left:0;
}
.left-option,.right-option{
  font-size: 36rpx;
  color: #fff;
}

.left-option{
  margin-left: 40rpx;
}
.right-option{
  margin-right: 40rpx;
}

.camera{
  width: 100%;
  height: 100%;
}

.camera-btn{
  width: 150rpx;
  height: 150rpx;
}

